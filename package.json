{
  "name": "library.dr-conversion",
  "version": "0.3.3",
  "description": "Unified interface for building multi-platform chat bots (Discord, Root, and more)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist dist-examples coverage",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "setup": "node dist/cli.js setup",
    "generate-manifest": "node dist/cli.js generate-manifest",
    "example:simple": "ts-node examples/simple-bot.ts",
    "example:discord": "ts-node examples/discord-bot.ts",
    "example:root": "ts-node examples/root-bot.ts",
    "example:root-app": "ts-node examples/root-app.ts",
    "example:advanced": "ts-node examples/advanced-bot.ts"
  },
  "keywords": [
    "discord",
    "root",
    "bot",
    "chat",
    "chatbot",
    "platform",
    "bridge",
    "multi-platform",
    "unified",
    "typescript"
  ],
  "author": "Shad0wcrushers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shad0wcrushers/Library.shadow-DR-Conversion.git"
  },
  "bugs": {
    "url": "https://github.com/Shad0wcrushers/Library.shadow-DR-Conversion/issues"
  },
  "homepage": "https://github.com/Shad0wcrushers/Library.shadow-DR-Conversion#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "@rootsdk/client-app": "^0.17.0",
    "@rootsdk/server-bot": "^0.17.0",
    "discord.js": "^14.0.0"
  },
  "peerDependenciesMeta": {
    "discord.js": {
      "optional": true
    },
    "@rootsdk/server-bot": {
      "optional": true
    },
    "@rootsdk/client-app": {
      "optional": true
    }
  },
  "dependencies": {
    "commander": "^11.1.0",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@rootsdk/client-app": "^0.17.0",
    "@rootsdk/client-app-ui": "^0.17.0",
    "@rootsdk/dev-tools": "^0.17.0",
    "@rootsdk/server-app": "^0.17.0",
    "@rootsdk/server-bot": "^0.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "discord.js": "^14.14.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "API.md",
    "CHANGELOG.md"
  ],
  "bin": {
    "library.dr-conversion": "dist/cli.js"
  }
}
